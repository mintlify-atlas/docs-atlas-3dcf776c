  "keyFeatures": [
    "Create and manage modpacks for Project Zomboid servers",
    "Import mods directly from Steam Workshop",
    "Export server configuration files (41x and 42x versions)",
    "Team collaboration with permission-based access",
    "Public modpack sharing and discovery",
    "Automatic mod metadata synchronization"
  ],
  "publicApiSurface": [
    "GET /modpacks/public - List all public modpacks",
    "GET /modpacks/my - List user's modpacks",
    "POST /modpacks - Create a new modpack",
    "POST /modpacks/:id/import - Import mods from Steam Collection",
    "POST /modpacks/:id/server-file - Generate server configuration file",
    "GET /mods - List all mods with filters",
    "GET /mods/:id - Get mod details",
    "GET /mods/workshop/:workshopId - Get mod by Workshop ID",
    "POST /modpacks/:id/members - Add team member to modpack",
    "DELETE /modpacks/:id/members - Remove team member"
